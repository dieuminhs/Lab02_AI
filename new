married(X,Y):-
    married_to(X,Y).

married(X,Y):-
    married_to(Y,X).

husband(Person,Wife):-
    male(Person),
    female(Wife),
    married(Person,Wife).

wife(Person,Husband):-
    female(Person),
    male(Husband),
    married(Person,Husband).

father(Parent,Child):-
    male(Parent),
    parent(Parent,Child).

mother(Parent,Child):-
    female(Parent),
    parent(Parent,Child).


child(Child,Parent):-
    parent(Parent,Child).

son(Child,Parent):-
    male(Child),
    parent(Parent,Child).

daughter(Child,Parent):-
    female(Child),
    parent(Parent,Child).

grandparent(GP,GC):-
    parent(GP,X),
    parent(X,GC).

grandmother(GM,GC):-
    female(GM),
    parent(GM,X),
    parent(X,GC).

grandfather(GF,GC):-
    male(GF),
    parent(GF,X),
    parent(X,GC).

grandchild(GC,GP):-
    parent(GP,X),
    parent(X,GC).

grandson(GS,GP):-
    male(GS),
    parent(GP,X),
    parent(X,GS).

granddaughter(GD,GP):-
    female(GD),
    parent(GP,X),
    parent(X,GD).

sibling_old(Person1,Person2):-
    parent(X,Person1),
    parent(X,Person2),
    Person1\=Person2.

sibling(Person1,Person2):-
    setof((Person1,Person2),P^(parent(P,Person1),
                               parent(P,Person2),\+Person1=Person2),Sibs),
    member((Person1,Person2), Sibs).

brother_fact(Person,Sibling):-
    Person\==Sibling,
    male(Person),
    parent(X,Person),
    parent(X,Sibling).

brother(Person,Sibling):- brother_fact(Person,Sibling).
brother(Person,Sibling):- brother_fact(Sibling,Person).

sister(Person,Sibling):-
    Person\==Sibling,
    female(Person),
    parent(X,Person),
    parent(X,Sibling).

sister(Person,Sibling):-
    Person\==Sibling,
    female(Sibling),
    parent(X,Person),
    parent(X,Sibling).

aunt(Person,NieceNephew):-
    female(Person),
    sibling(Person,X),
    X\==Person,
    parent(X,NieceNephew).

uncle(Person,NieceNephew):-
    male(Person),
    sibling(Person,X),
    X\==Person,
    parent(X,NieceNephew).

niece(Person,AuntUncle):-
    male(Person),
    sibling(AuntUncle,X),
    X\==AuntUncle,
    parent(X,Person).

nephew(Person,AuntUncle):-
    female(Person),
    sibling(AuntUncle,X),
    X\==AuntUncle,
    parent(X,Person).

